/* miniprogram/pages/my/my.wxss */

.my-container{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  /*padding: 200rpx 0;*/
  box-sizing: border-box;
}



.from_page{
  height: 100vh;
}

.user{
  height: 250rpx;
  background-color: #fff;
  margin: 0 10rpx 15rpx 10rpx;
  border-radius: 0 0 20rpx 20rpx;
}

.user .photo{
  border-radius: 50%;
  width: 160rpx;
  height: 160rpx;
  /* background-color: red; */
  margin-left: 30rpx; 
}

.information{
  margin-left: 30rpx;
  width: 400rpx;
  display: flex;
  flex-direction: column;
}

.information .item{
  margin:16rpx 0;
}

.login_button{
  margin: auto;
  text-align: center;
  margin-bottom: 20rpx;
}